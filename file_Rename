version: '3'
services:
  webapp:
    image: nginx:latest
    ports:
      - "80:80"
    networks:
      - frontend
    volumes:
      - webapp-data:/usr/share/nginx/html

  database:
    image: postgres:latest
    environment:
      POSTGRES_DB: mydatabase
      POSTGRES_USER: myuser
      POSTGRES_PASSWORD: mypassword
    networks:
      - backend
    volumes:
      - db-data:/var/lib/postgresql/data
    ports:
      - "5432:5432"
  cache:
    image: redis:alpine
    networks:
      - backend
    volumes:
      - cache-data:/data
    ports:
      - "6379:6379"
  worker:
    image: python:3.9
    command: python worker.py
    networks:
      - backend
    volumes:
      - worker-data:/app
  api:
    image: node:14
    command: npm start
    networks:
      - frontend
      - backend
    volumes:
      - api-data:/app
    ports:
      - "3000:3000"

networks:
  frontend:
  backend:
volumes:
  webapp-data:
  api-data:
  db-data:
  cache-data:
  worker-data:
